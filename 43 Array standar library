#include <iostream>
#include <array>
using namespace std;

int main(){
	//Membuat arrat dengan standard library
	//array <int, Jumlah array > nama array
	
	array < int ,5 > nilai ;
	
	for (int i=0 ; i<=4 ; i++ ){
		nilai [i] = i;
		cout << "nilai [" << i << "] = " << nilai[i];
		cout << "addres = " << &nilai[i] << endl;
	}

}
